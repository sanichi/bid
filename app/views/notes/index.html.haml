:ruby
  set_meta_tags title: t("note.notes")
  inputs = [
    [:query,   t("search"),      :text,   size: 16, placeholder: t("search"), autofocus: true],
    [:user_id, t("note.author"), :select, menu: author_menu(params[:user_id])],
  ]

%section
  .header{class: "#{can?(:create, Note) ? '' : 'text-center'}"}
    %h3.d-inline= t("note.notes")
  .body
    = render "utils/search/form", index: notes_path, inputs: inputs
    %table.mt-4{class: "table table-bordered table-sm"}
      %thead
        %tr
          %th= t("note.title")
          %th= t("note.author")
          %th.text-center= t("note.updated")
      %tbody{id: "results"}
        = render "results", notes: @notes
  - if can?(:create, Note)
    .footer
      = link_to t("note.new"), new_note_path, class: "btn btn-info btn-sm"
