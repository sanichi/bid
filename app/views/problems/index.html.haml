:ruby
  set_meta_tags title: t("problem.title")
  inputs = [
    [:query,   t("search"),      :text,   size: 16, placeholder: t("search"), autofocus: true],
    [:user_id, t("note.author"), :select, menu: author_menu(params[:user_id])],
  ]

%section
  .header{class: "#{can?(:create, Problem) ? '' : 'text-center'}"}
    %h3.d-inline= t("problem.title")
    - if can?(:create, Problem)
      .float-right.mt-1= link_to t("problem.new"), new_problem_path, class: "btn btn-info btn-sm"
  .body
    = render "utils/search/form", index: problems_path, inputs: inputs
    .row
      %div{class: center(xl: 6, lg: 8, md: 10, sm: 12)}
        %table.mt-4{class: "table table-bordered table-sm"}
          %thead
            %tr
              %th= "#"
              %th= t("problem.hand")
              %th= t("problem.bids")
              %th= t("problem.vul")
              %th.text-center= t("problem.draft")
              %th= t("problem.author")
          %tbody#results
            = render "results", problems: @problems
